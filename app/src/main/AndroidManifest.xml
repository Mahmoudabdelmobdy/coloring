<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.frype.coloring">

    <application
        android:name=".ColoringApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ColoringActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ColorPickerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.OutlineSelectionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.PictureGalleryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.BookSelectionMainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SendLogActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
